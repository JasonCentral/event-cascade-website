---
import pricingPlans from "~/data/pricing-plans.json";

import SectionHeader from "~/components/ui/SectionHeader.astro";
import TimePeriodToggle from "./TimePeriodToggle.astro";
import PlanCard from "./PlanCard.astro";

const sectionTitle = "Pricing Plans";
const sectionDescription =
  "Choose the plan that best fits your event planning needs. Whether you're organizing a small gathering or a large corporate event, EventCascade has you covered.";

const testPlan = pricingPlans[0];
---

<section id="pricing" class="mt-16 flex flex-col items-center">
  <SectionHeader title={sectionTitle} description={sectionDescription} />
  <TimePeriodToggle />

  <div class="my-10 flex flex-col gap-5">
    {
      pricingPlans.map((plan) => (
        <PlanCard {...plan} class="min-h-[400px] w-full" />
      ))
    }
  </div>
</section>
