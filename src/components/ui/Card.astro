---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<div class:list={["card", className]}>
  <slot />
</div>

<style>
  .card {
    box-shadow: inset 0px 0px 80px 0px rgba(23, 29, 63, 1);
    -moz-box-shadow: inset 0px 0px 80px 0px rgba(23, 29, 63, 1);
    box-shadow: inset 0px 0px 80px 0px rgba(23, 29, 63, 1);

    border: 1px solid #1c244c;
  }
</style>
