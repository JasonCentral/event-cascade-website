---
interface Props {
  class?: string;
}

const { class: className, ...props } = Astro.props;
---

<div
  class:list={[
    "relative mx-auto flex items-center justify-center rounded-[50%] content-none before:absolute before:-z-10 before:block before:h-full before:w-full before:rounded-[50%] before:bg-background-light",
    className,
  ]}
  {...props}
>
  <div class="h-[80%] w-[80%]">
    <slot />
  </div>
</div>
