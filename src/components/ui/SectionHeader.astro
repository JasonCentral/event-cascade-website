---
interface Props {
  title: string;
  description: string;
  class?: string;
}

const { title, description, class: className, ...props } = Astro.props;
---

<div
  class:list={["mx-auto mb-10 max-w-3xl shrink-0 text-center", className]}
  {...props}
>
  <h2 class="mb-2 text-3xl">{title}</h2>
  <p class="text-secondary">{description}</p>
</div>
