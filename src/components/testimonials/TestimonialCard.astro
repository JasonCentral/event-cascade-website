---
import Card from "~/components/ui/Card.astro";

interface Props {
  name: string;
  title: string;
  quote: string;
}

const { name, title, quote } = Astro.props;
---

<Card
  data-testimonial-card
  class="shadow-none hidden h-64 w-72 flex-col justify-between overflow-clip rounded-none bg-background-light p-5 text-center transition-all"
>
  <p class="text-secondary">"{quote}"</p>
  <p class="mt-4"><span class="text-xl text-accent">{name}</span> {title}</p>
</Card>

<style>
  .active {
    display: flex;
  }

  @media only screen and (min-width: 1024px) {
    .adj {
      display: flex;
      position: absolute;
      top: 0;
      scale: 50%;
      filter: blur(2px);
    }

    .adj-left {
      translate: -100%;
    }

    .adj-right {
      translate: 100%;
    }
  }
</style>
