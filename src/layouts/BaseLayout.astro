---
import "../styles/global.css";

import Header from "~/components/Header.astro";
import Footer from "~/components/footer/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/ev-logo-transparent.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="EventCascade is a cutting-edge SaaS platform that simplifies event planning and management. From corporate events to personal celebrations, our all-in-one solution offers seamless tools for registration, agenda creation, attendee engagement, and more. Elevate your events and make them unforgettable with EventCascade."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&family=Sora:wght@100..800&display=swap"
      rel="stylesheet"
    />

    <title>EventCascade</title>
  </head>
  <body class="max-w-full overflow-x-hidden bg-background px-7 text-primary">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
